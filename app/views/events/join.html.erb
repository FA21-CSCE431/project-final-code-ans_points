<style>
    .checkin-form {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        margin-top: 20px;
    }

    .checkin-form div {
        display: flex;
        margin-bottom: 10px;
    }

    .checkin-form div > label {
        /*display: inline-block;*/
        text-align: right;
        margin-right: 5px;
        flex: 50%;
    }

    .checkin-form div > input {
        flex: 50%;
    }

    .checkin-form button {
        margin-top: 20px;
        margin-left: auto;
        margin-right: auto;
        display: block;
        width: 100%;
    }

    .event-name {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 2.8%;
    }
</style>
<div class="event-name">
  <h2>Checking in for <strong><%= @event.name %></strong></h2>
</div>
<div class="checkin-form">
  <form action="/checkin" method="post" accept-charset="UTF-8">
    <div>
      <label for="email">Email:</label>
      <input id="email" name="eventuser[email]" type="email" pattern=".+@tamu\.edu" title="Must end with @tamu.edu" maxlength="255" required/>
    </div>
    <div>
      <label for="first-name">First name:</label>
      <input id="first-name" name="eventuser[first_name]" type="text" maxlength="255" required/>
    </div>
    <div>
      <label for="last-name">Last name:</label>
      <input id="last-name" name="eventuser[last_name]" type="text" maxlength="255" required/>
    </div>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
    <button type="submit" name="eventuser[event_id]" value="<%= @event.id %>" class="btn btn-primary" style="margin-top: 20px; align-self: center">Check In</button>
  </form>
</div>