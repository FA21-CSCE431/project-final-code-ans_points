<div class="event-name">
  <h2>Checking in for <strong><%= @event.name %></strong></h2>
</div>
<div class="checkin-form">
  <form action="/checkin" method="post" accept-charset="UTF-8">
    <div>
      <label for="email">Email:</label>
      <input id="email" name="eventuser[email]" type="email" pattern=".+@tamu\.edu" title="Must end with @tamu.edu" maxlength="255" required/>
    </div>
    <div>
      <label for="first-name">First name:</label>
      <input id="first-name" name="eventuser[first_name]" type="text" maxlength="255" required/>
    </div>
    <div>
      <label for="last-name">Last name:</label>
      <input id="last-name" name="eventuser[last_name]" type="text" maxlength="255" required/>
    </div>
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
    <button type="submit" name="eventuser[event_id]" value="<%= @event.id %>" class="btn btn-primary" style="margin-top: 20px; align-self: center">Check In</button>
  </form>
</div>