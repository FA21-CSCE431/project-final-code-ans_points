<div class="container text-center">
    <h4>View your current Points</h4>
    <div class="input-group mx-auto" style="margin: auto">
    <%= form_tag('/users/show', :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:input], placeholder: "Search by email or netId", class: 'form-control' %>
        </br>
        <span class="input-group-btn">
        <%= submit_tag "Search", class: 'btn btn-default' %>
        </span>
    <% end %>
    </div>
</div>